# Handwriting Math App - Environment Variables Template
# Copy this file to .env and fill in your actual values

# CameraMath API Configuration (MVP)
# Get your API key from: https://cameramath.com/api
CAMERAMATH_API_KEY=your_cameramath_api_key_here
CAMERAMATH_API_URL=https://api.cameramath.com/v1

# Wolfram Alpha API Configuration (Production - Optional)
# Get your API key from: https://products.wolframalpha.com/api/
# WOLFRAM_API_KEY=your_wolfram_api_key_here
# WOLFRAM_API_URL=https://api.wolframalpha.com/v2

# Sentry Error Tracking (Optional)
# Get your DSN from: https://sentry.io/
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_ENVIRONMENT=development

# App Configuration
APP_ENV=development
# APP_ENV=staging
# APP_ENV=production

# Feature Flags (Optional)
# ENABLE_OFFLINE_MODE=true
# ENABLE_VOICE_HINTS=false
# ENABLE_CLOUD_SYNC=false

# ML Kit Configuration
# ML_KIT_MIN_CONFIDENCE=0.85

# Validation Configuration
# VALIDATION_CACHE_ENABLED=true
# VALIDATION_DEBOUNCE_MS=500
# API_RATE_LIMIT_MS=500

# Development Settings
# DEV_MENU_ENABLED=true
# ENABLE_FLIPPER=false
