# Handwriting Math App - Environment Variables Template
# Copy this file to .env and fill in your actual values

# CameraMath API Configuration (MVP - PR5)
# Get your API key from: https://cameramath.com/api or contact support@cameramath.com
# Free tier: $10 credits (~200-500 validation calls)
CAMERAMATH_API_KEY=your_cameramath_api_key_here
CAMERAMATH_API_URL=https://api.cameramath.com/v1
CAMERAMATH_TIMEOUT_MS=5000
CAMERAMATH_ENABLE_CACHING=true

# Wolfram Alpha API Configuration (Production - Optional)
# Get your API key from: https://products.wolframalpha.com/api/
# WOLFRAM_API_KEY=your_wolfram_api_key_here
# WOLFRAM_API_URL=https://api.wolframalpha.com/v2

# Sentry Error Tracking (Optional)
# Get your DSN from: https://sentry.io/
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_ENVIRONMENT=development

# App Configuration
APP_ENV=development
# APP_ENV=staging
# APP_ENV=production

# Feature Flags (Optional)
# ENABLE_OFFLINE_MODE=true
# ENABLE_VOICE_HINTS=false
# ENABLE_CLOUD_SYNC=false

# MyScript Cloud API Configuration
# Get your credentials from: https://developer.myscript.com
MYSCRIPT_APPLICATION_KEY=your_myscript_application_key_here
# MYSCRIPT_HMAC_KEY=your_myscript_hmac_key_here  # Optional: can disable for testing
MYSCRIPT_MIN_CONFIDENCE=0.85

# UpStudy API Configuration (Math Validation)
# Contact team for API credentials
# UPSTUDY_API_KEY=your_upstudy_api_key_here
# UPSTUDY_API_URL=https://api.upstudy.com/v1
# UPSTUDY_TIMEOUT_MS=5000

# Validation Configuration
# VALIDATION_CACHE_ENABLED=true
# VALIDATION_DEBOUNCE_MS=500
# API_RATE_LIMIT_MS=500

# Development Settings
# DEV_MENU_ENABLED=true
# ENABLE_FLIPPER=false

# Supabase Cloud Sync (PR12)
# Get your project URL and anon key from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
ENABLE_CLOUD_SYNC=true
SYNC_RETRY_MAX_ATTEMPTS=8
SYNC_RETRY_DELAY_MS=1000

# ============================================================================
# PR13-16 FEATURE FLAGS
# ============================================================================

# Tutorial Mode (PR14)
ENABLE_TUTORIAL_MODE=false
TUTORIAL_VIDEO_PLATFORM=youtube
TUTORIAL_CACHE_TTL_HOURS=24

# Assessment Mode (PR15)
ENABLE_ASSESSMENT_MODE=false
ASSESSMENT_BATCH_VALIDATION_ENABLED=true
ASSESSMENT_MAX_RETRIES=3
ASSESSMENT_DEFAULT_TIME_LIMIT_SECONDS=600

# Real-time Collaboration (PR13)
ENABLE_COLLABORATION=false
COLLABORATION_STROKE_CLEANUP_INTERVAL_MS=3600000
COLLABORATION_SESSION_TIMEOUT_MS=3600000
COLLABORATION_MAX_BROADCAST_RATE=100
